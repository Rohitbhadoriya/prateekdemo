<%- include('./header.ejs') %>
 <!-- Login Form -->
 <div class="container">
    <div class="row">
      <h1 class="text-center mt-5 fst-italic">Login Now</h1>
    <div class="col-md-6 mt-4 mb-5">
      <img
        class="w-100"
        src="images/Tiny technicians repairing smartphone.jpg"
        alt="poster"
      />
    </div>
    <div class="col-md-6 mt-4 mb-5">
      <div class="border border-dark stylish-rounded shadow p-3">
        <form method="post">
          <div class="form-floating mb-0">
              <div>Email</div>
              <input
                class="form-control text-capitalize"
                name="email"
                type="email"
                placeholder="Enter your email"
                required
              />
            </div>
            <div class="form-floating mb-0">
              <div>Password</div>
              <input
                class="form-control text-capitalize"
                name="password"
                type="password"
                placeholder="Enter your password"
                required
              />
            </div>
           
        </form>
     
      </div>
      <br>
      <center>
          <button type="submit" class="btn btn-primary mb-5 btn-lg">Submit</button>
      </center>
    </div>
    </div>
  </div>
    <!-- Login Form -->