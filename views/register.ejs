<%- include('./header1.ejs') %>

  <!-- Register Form Start -->
  <div class="container">
    <div class="row">
      <h1 class="text-center mt-5 fst-italic">Register Now</h1>
    <div class="col-md-6 mt-4 mb-5">
      <img
        class="w-100"
        src="images/Tiny technicians repairing smartphone.jpg"
        alt="poster"
      />
    </div>
    <div class="col-lg-6 bglogin p-4">
      <form action="/userinsert" method="post" enctype="multipart/form-data">

          <!-- Heading (Register Here) -->
          <h1 class="mb-5 text-center">Register Here</h1>        
          <!-- User Name -->
          <div class="row mb-4">
              <div class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2">User
                  Name</div>
              <div class="col-lg-10">
                  <input class="form-control text-capitalize" name="name" type="text" placeholder="Enter your name"
                      required>
              </div>
          </div>

          <!-- Email -->
          <div class="row mb-3">
              <div class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2">Email
              </div>
              <div class="col-lg-10">
                  <input class="form-control" type="email" name="email" placeholder="name@example.com" required>
              </div>
          </div>

          <!-- Password -->
          <div class="row mb-4">
              <div class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2">
                  Password</div>
              <div class="col-lg-10">
                  <input class="form-control" name="password" type="password" required>
              </div>
          </div>

          <!-- Confirm Password -->
          <div class="row mb-4">
              <div class="col-lg-3 text-center bg-secondary rounded text-light fw-light my-auto p-2">
                  Confirm Password</div>
              <div class="col-lg-9">
                  <input class="form-control" name="cpassword" type="password" required>
              </div>
          </div>
          <div class="form-group">
            <label>Image</label>
            <input type="file" name="image" class="form-control" required>
          </div>
          <!-- Choose File -->
          <!-- Button (Login) -->
          <center>
              <button type="submit" class="btn btn-primary mb-5 btn-lg">Register</button>
          </center>

      </form>
  </div>
    </div>
  </div>

  <!-- Register Form End -->