<%- include('./header.ejs') %>
 <%- include('./sidebar.ejs') %>

   <center>
    <h1>Generate Reports</h1>
 
   <form action="/user/reports/month-wise" method="post">
     <h3>Month-wise Report</h3>
     <label for="month">Select Month:</label>
     <select name="month" id="month" required>
       <option value="1">January</option>
       <option value="2">February</option>
       <option value="3">March</option>
       <option value="4">April</option>
       <option value="5">May</option>
       <option value="6">June</option>
       <option value="7">July</option>
       <option value="8">August</option>
       <option value="9">September</option>
       <option value="10">October</option>
       <option value="11">November</option>
       <option value="12">December</option>
       <!-- Add more months -->
     </select>
 
     <label for="year">Select Year:</label>
     <input type="number" name="year" min="2000" max="2100" required>
 
     <button type="submit">Download Month-wise Report</button>
   </form>
 
   <hr>
 
   <form action="/user/reports/date-wise" method="post">
     <h3>Date-wise Report</h3>
     <label for="startDate">Start Date:</label>
     <input type="date" name="startDate" required>
 
     <label for="endDate">End Date:</label>
     <input type="date" name="endDate" required>
 
     <button type="submit">Download Date-wise Report</button>
   </form>
   </center>

 

